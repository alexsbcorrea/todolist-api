                "type": "integer"
              },
              "firstname": {
                "type": "string"
              },
              "lastname": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "acceptterms": {
                "type": "string"
              },
              "image": {
                "type": "string"
              },
              "createdAt": {
                "type": "string"
              },
              "updatedAt": {
                "type": "string"
              }
            }
          }
        }
      },
      "Response-Change-Photo": {
        "type": "object",
        "properties": {
          "message,": {
            "type": "string"
          },
          "image,": {
            "type": "string"
          }
        }
      },
      "Responses-User-Operations": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "NewTask": {
        "type": "object",
        "properties": {
          "description,": {
            "type": "string"
          },
          "local,": {
            "type": "string"
          },
          "date": {
            "type": "string"
          },
          "time": {
            "type": "string"
          },
          "categorie": {
            "type": "string"
          }
        }
      },
      "ViewTask": {
        "type": "object",
        "properties": {
          "task": {
            "type": "object",
            "properties": {
