          "required": true,
          "content": {
            "aplication/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "examples": {
                "Login do Usuário": {
                  "value": {
                    "email": "alex.sandro_as@hotmail.com",
                    "password": "teste@1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "422": {
            "description": "Unprocessable Entity"
          },
          "404": {
            "description": "Not Found"
