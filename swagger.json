      "Responses-Tasks-Operations": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "Response-Get-Tasks": {
        "type": "object",
        "properties": {
          "tasks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "description": {
