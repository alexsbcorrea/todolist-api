                },
                "local": {
                  "type": "string"
                },
                "date": {
                  "type": "string"
                },
                "time": {
                  "type": "string"
                },
                "categorie": {
                  "type": "string"
                },
                "isClosed": {
                  "type": "boolean"
                },
                "idUser": {
                  "type": "integer"
                },
                "createdAt": {
                  "type": "string"
                },
                "updatedAt": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
